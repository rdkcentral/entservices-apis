{
    "$schema": "https://raw.githubusercontent.com/rdkcentral/rdkservices/main/Tools/json_generator/schemas/interface.schema.json",
    "jsonrpc": "2.0",
    "info": {
        "title": "USBDevice API",
        "class": "org.rdk.UsbDevice",
        "description": "The USBDevice Plugin is responsible for notifying and providing information about USB devices attached to the host system."
    },
    "common": {
        "$ref": "../common/common.json"
    },
    "definitions": {
        "USBDevice": {
            "type": "object",
            "properties": {
                "deviceClass": {
                    "type": "integer",
                    "description": "USB class of the device",
                    "example": 8
                },
                "deviceSubclass": {
                    "type": "integer",
                    "description": "USB Sub class of the device",
                    "example": 6
                },
                "deviceName": {
                    "type": "string",
                    "description": "Name of the USB device",
                    "example": "001/003"
                },
                "devicePath": {
                    "type": "string",
                    "description": "The path to be used for the USB device",
                    "example": "/dev/sdb"
                }
            },
            "required":[
                "deviceClass",
                "deviceSubclass",
                "deviceName",
                "devicePath"
            ]
        },
        "USBDeviceList": {
            "summary": "An array of USBDevice",
            "type": "array",
            "items": {
                "$ref": "#/definitions/USBDevice"
            }
        },
        "USBProductInfo": {
            "type": "object",
            "properties": {
                "languageId": {
                    "type": "integer",
                    "description": "Language ID present on the device",
                    "example": 10
                },
                "serialNumber": {
                    "type": "string",
                    "description": "Unicode string representing the serial number of the device",
                    "example": "B32FD507"
                },
                "manufacturer": {
                    "type": "string",
                    "description": "Unicode string representing the manufacturer of the device",
                    "example": "Alcor Micro Corp"
                },
                "product": {
                    "type": "string",
                    "description": "Unicode string representing the product",
                    "example": "Flash Drive"
                }
            }
        },
        "USBDeviceInfo": {
            "type": "object",
            "properties": {
                "parentId": {
                    "type": "integer",
                    "description": "Parent Node ID of the device",
                    "example": 0
                },
                "deviceStatus": {
                    "type": "integer",
                    "description": "Current device status",
                    "example": 1
                },
                "deviceLevel": {
                    "type": "integer",
                    "description": "Device level",
                    "example": 1
                },
                "portNumber": {
                    "type": "integer",
                    "description": "Port number of USB on which the device is attached",
                    "example": 1
                },
                "vendorId": {
                    "type": "integer",
                    "description": "Vendor ID of the device",
                    "example": 1921
                },
                "productid": {
                    "type": "integer",
                    "description": "Product ID of the device",
                    "example": 21889
                },
                "protocol": {
                    "type": "integer",
                    "description": "Protocol supported by the device",
                    "example": 0
                },
                "serialnumber": {
                    "type": "string",
                    "description": "Serial number of the device",
                    "example": "4C530000120309105565"
                },
                "device": {
                    "$ref": "#/definitions/USBDevice"
                },
                "flags": {
                    "type": "string",
                    "description": "Flags of the device",
                    "example": "AVAILABLE"
                },
                "features": {
                    "type": "integer",
                    "description": "Features supported by the device - reserved",
                    "example": 0
                },
                "busSpeed": {
                    "type": "string",
                    "description": "Speed of the device",
                    "example": "Super"
                },
                "numLanguageIds": {
                    "type": "integer",
                    "description": "Number of language IDs present on the device",
                    "example": 2
                },
                "productInfo1": {
                    "$ref": "#/definitions/USBProductInfo"
                },
                "productInfo2": {
                    "$ref": "#/definitions/USBProductInfo"
                },
                "productInfo3": {
                    "$ref": "#/definitions/USBProductInfo"
                },
                "productInfo4": {
                    "$ref": "#/definitions/USBProductInfo"
                }
            },
            "required":[
                "parentId",
                "deviceStatus",
                "deviceLevel",
                "portNumber",
                "vendorId",
                "productid",
                "protocol",
                "serialnumber",
                "device",
                "flags",
                "busSpeed"
            ]
        },
        "USBDeviceInfoList": {
            "summary": "An array of USBDeviceInfo",
            "type": "array",
            "items": {
                "$ref": "#/definitions/USBDeviceInfo"
            }
        }
    },
    "methods": {
        "getDeviceList": {
            "summary": "Gets the device information of the connected USB Devices",
            "params": {
                "type": "object",
                "properties": {},
                "required": []
            },
            "result": {
                "type": "object",
                "properties": {
                    "devices": {
                        "$ref": "#/definitions/USBDeviceList"
                    }
                }
            },
            "errors": [
                {
                    "description": "General error",
                    "$ref": "#/common/errors/general"
                }
            ]
        },
        "getDeviceInfo": {
            "summary": "Gets detailed device information for the given device name",
            "params": {
                "type": "object",
                "properties": {
                    "deviceName": {
                        "summary": "Get the extended USB device information for the provided device name",
                        "type": "string",
                        "example": "001/012"
                    }
                },
                "required": ["deviceName"]
            },
            "result": {
                "type": "object",
                "properties": {
                    "deviceInfo": {
                        "$ref": "#/definitions/USBDeviceInfoList"
                    }
                }
            },
            "errors": [
                {
                    "description": "General error",
                    "$ref": "#/common/errors/general"
                }
            ]
        },
        "bindDriver": {
            "summary": "Binds the respective driver for the device",
            "params": {
                "type": "object",
                "properties": {
                    "deviceName": {
                        "summary": "Name of the device",
                        "type": "string",
                        "example": "001/012"
                    }
                },
                "required": ["deviceName"]
            },
            "result": {
                "summary": "On success null will be returned",
                "type": "string",
                "example": "null"
            },
            "errors": [
                {
                    "description": "General error",
                    "$ref": "#/common/errors/general"
                }
            ]
        },
        "unbindDriver": {
            "summary": "Unbinds the respective driver for the device",
            "params": {
                "type": "object",
                "properties": {
                    "deviceName": {
                        "summary": "Name of the device",
                        "type": "string",
                        "example": "001/012"
                    }
                },
                "required": ["deviceName"]
            },
            "result": {
                "summary": "On success null will be returned",
                "type": "string",
                "example": "null"
            },
            "errors": [
                {
                    "description": "General error",
                    "$ref": "#/common/errors/general"
                }
            ]
        }
    },
    "events": {
        "onDevicePluggedIn": {
            "summary": "Device Plugged in notification",
            "params": {
                "type": "object",
                "properties": {
                    "device": {
                        "$ref": "#/definitions/USBDevice"
                    }
                }
            }
        },
        "onDevicePluggedOut": {
            "summary": "Device Plugged out notification",
            "params": {
                "type": "object",
                "properties": {
                    "device": {
                        "$ref": "#/definitions/USBDevice"
                    }
                }
            }
        }
    }
}
