                    }
                }
            },
            "result": {
                "description": "Returns null on success or an error code string on failure.",
                "$ref": "#/common/results/void"
            }
        }
    },
    "events": {
        "OnAppDownloadStatus": {
            "summary": "Triggered whenever the App is installed.",
            "params": {
                "type": "object",
                "properties": {
                    "packageInfo": {
                        "$ref": "#/definitions/packageInfo"
                    }
                }
            }
        }
    }
